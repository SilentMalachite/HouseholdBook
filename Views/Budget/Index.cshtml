@model IEnumerable<HouseholdBook.Models.Budget>

@{
    ViewData["Title"] = "予算一覧";
    var year = (int)ViewData["Year"]!;
    var month = (int)ViewData["Month"]!;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@year 年 @month 月の予算</h1>
    <div>
        <a class="btn btn-secondary" asp-action="Index" asp-route-year="@(month == 1 ? year - 1 : year)" asp-route-month="@(month == 1 ? 12 : month - 1)">← 前月</a>
        <a class="btn btn-secondary" asp-action="Index" asp-route-year="@(month == 12 ? year + 1 : year)" asp-route-month="@(month == 12 ? 1 : month + 1)">次月 →</a>
        <a asp-action="Create" class="btn btn-primary" asp-route-year="@year" asp-route-month="@month">予算を追加</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>カテゴリ</th>
            <th class="text-end">金額</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category.Name</td>
                <td class="text-end">¥@item.Amount.ToString("N0")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">編集</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
