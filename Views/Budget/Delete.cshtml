@model HouseholdBook.Models.Budget

@{
    ViewData["Title"] = "予算の削除";
}

<h1>予算の削除</h1>

<div class="alert alert-warning">
    <p>以下の予算を削除してもよろしいですか？</p>
</div>

<dl class="row">
    <dt class="col-sm-2">カテゴリ</dt>
    <dd class="col-sm-10">@Model.Category.Name</dd>
    <dt class="col-sm-2">年</dt>
    <dd class="col-sm-10">@Model.Year</dd>
    <dt class="col-sm-2">月</dt>
    <dd class="col-sm-10">@Model.Month</dd>
    <dt class="col-sm-2">金額</dt>
    <dd class="col-sm-10">¥@Model.Amount.ToString("N0")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">削除</button>
    <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
</form>
